@model Common.Models.EventsFields
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj wydarzenie</h2>

<form asp-controller="Events" asp-action="Create" method="post">
    <div class="form-group">
        <label>Nazwa wydarzenia</label>
        <input asp-for="Name" class="form-control" type="text" placeholder="Nazwa wydarzenia...">
        <span asp-validation-for="Name" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label>Kiedy</label>
        <input asp-for="StartDate" class="form-control" type="datetime-local" placeholder="Start wydarzenia...">
        <span asp-validation-for="StartDate" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label>Gdzie</label>
        <input asp-for="PlaceName" class="form-control" type="text" placeholder="Miejsce wydarzenia...">
        <span asp-validation-for="PlaceName" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label>Rodzaj biletów</label>
        <select asp-for="TicketsType" class="form-control">
            <option>Płatne</option>
            <option>Darmowe</option>
            <option>Nie podano</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
</form>
<a asp-controller="Events" asp-action="Index" class="btn btn-primary">Cofnij</a>